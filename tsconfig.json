{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": false,
    "watch": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}

