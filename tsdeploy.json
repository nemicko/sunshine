{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/mongodb"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}
